<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ⏸ 종료 버튼 상단 우측 -->
    <LinearLayout
        android:id="@+id/topButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="8dp">

        <Button
            android:id="@+id/btnPause"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="일시정지"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginRight="8dp"
            android:background="@drawable/selectable_button_background" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="돌아가기"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/selectable_button_background" />
    </LinearLayout>

    <!-- LEVEL 텍스트 -->
    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topButtons"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="LEVEL"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- TIMER 텍스트 -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/levelText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="TIME: 0ms"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- STRIKE 텍스트 -->
    <TextView
        android:id="@+id/strikeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/levelText"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="Strike: 0/8"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- 3x3 게임 그리드 -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/strikeText"
        android:layout_margin="16dp"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:gravity="center" />
</RelativeLayout>
